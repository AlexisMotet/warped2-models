### Common Configurations ###

root_dir="${PWD}/../.."
mpi_includdir="/usr/include/mpich"
mpi_libdir="/usr/lib/mpich"

#mpi_cmd="/usr/bin/mpiexec -hostfile ~/hosts "
mpi_cmd=""


## Choose model type and specifications ##
model="epidemic"
mspec="default"


case_name="$model-$mspec"
case $case_name in
    "traffic-1m")
        echo "Simulations for 1 million LPs traffic"
        model_cmd="${mpi_cmd}./traffic_sim -x 1024 -y 1024 -n 5"
        max_sim_time=("500")
        seq_sim_time=300
        timeout=200
        ;;

    "traffic-default")
        echo "Simulations for 10k LPs traffic (default)"
        model_cmd="${mpi_cmd}./traffic_sim"
        max_sim_time=("10000")
        seq_sim_time=6000
        timeout=150
        ;;

    "epidemic-100k")
        echo "Simulations for 100k LPs epidemic"
        model_cmd="${mpi_cmd}./epidemic_sim -m model_100k_ws.dat"
        max_sim_time=("8000")
        seq_sim_time=6000
        timeout=200
        ;;

    "epidemic-default")
        echo "Simulations for 10k LPs epidemic (default)"
        model_cmd="${mpi_cmd}./epidemic_sim"
        max_sim_time=("15000")
        seq_sim_time=8000
        timeout=200
        ;;

    "sandpile-default")
        echo "Simulations for 1m LPs sandpile (default)"
        model_cmd="${mpi_cmd}./sandpile_sim"
        max_sim_time=("26")
        seq_sim_time=24
        timeout=150
        ;;

    *)
        echo "Invalid model choice"
        ;;
esac


iterations=1

worker_threads_1=("4" "8")
worker_threads_2=("16" "32" "64")

schedule_queues_1=("1"  "2"  "4")
schedule_queues_2=("8" "16")

#lp_migration=("off" "on")
lp_migration=("off")

#gvt_method=("asynchronous" "synchronous")
gvt_method=("asynchronous")

#gvt_period=("128" "512" "1024")
gvt_period=("1000")

#state_save_period=("10" "16" "32" "64")
state_save_period=("32")

bag_window_size_off=("0")
bag_window_size_on=("4" "16" "32" "64" "128" "256")

frac_bag_window_off=("1.0")
frac_bag_window_on=("0.75" "0.50" "0.25" "0.05")

chain_size=("4" "8" "12" "16")
block_size=("32" "64" "128" "256")


### Execution Sequences ###

# stl-multiset
build $root_dir master $mpi_includdir $mpi_libdir ""
permuteConfigScheduleQ $iterations $timeout "$model" "$model_cmd" max_sim_time worker_threads_1 \
        "stl-multiset" schedule_queues_1 lp_migration gvt_method gvt_period state_save_period
permuteConfigScheduleQ $iterations $timeout "$model" "$model_cmd" max_sim_time worker_threads_2 \
        "stl-multiset" schedule_queues_1 lp_migration gvt_method gvt_period state_save_period
permuteConfigScheduleQ $iterations $timeout "$model" "$model_cmd" max_sim_time worker_threads_2 \
